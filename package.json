{
  "name": "waste-of-money",
  "private": true,
  "type": "module",
  "engines": {
    "node": ">=20"
  },
  "packageManager": "pnpm@10.17.1",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "dev": "wrangler dev --local",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test": "vitest run",
    "test:watch": "vitest",
    "typecheck": "tsc --noEmit -p tsconfig.base.json",
    "lint": "echo 'TODO: add eslint' && exit 0",
    "generate:types": "openapi-typescript openapi/openapi.yaml -o packages/shared/src/generated/openapi.d.ts",
    "web:dev": "pnpm --filter @wom/web dev",
    "web:build": "pnpm --filter @wom/web build",
    "web:preview": "pnpm --filter @wom/web preview",
    "db:migrate": "bash scripts/db/migrate-local.sh",
    "db:seed": "bash scripts/db/seed-local.sh",
    "db:reset": "bash scripts/db/reset-local.sh",
    "deploy": "pnpm --filter @wom/web build && wrangler deploy --env production"
  },
  "devDependencies": {
    "@cloudflare/workers-types": "^4.20251014.0",
    "@hono/node-server": "^1.12.0",
    "@playwright/test": "^1.56.1",
    "@types/node": "^20.11.30",
    "openapi-typescript": "6.7.1",
    "tsx": "^4.19.0",
    "typescript": "^5.6.3",
    "vitest": "^1.6.0",
    "wrangler": "^3.114.15"
  },
  "dependencies": {
    "react-router-dom": "^7.9.5"
  }
}
